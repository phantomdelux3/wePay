generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  firstName String
  lastName  String

  transactions Transactions[] @relation("UserTransactions")
}

model Accounts {
  id Int @id @default(autoincrement())
  account Int @default(autoincrement())
  username String @unique
  balance Int

}

model Transactions {
  id Int @id @default(autoincrement())
  username String
  user User @relation("UserTransactions", fields: [username], references: [username])
  account Int
  transactionID Int
  amount Int
  form String
  to String
}